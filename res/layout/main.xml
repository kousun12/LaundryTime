<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/perfect_gray"
    android:orientation="vertical" >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:background="@color/perfect_gray"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/textViewHall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="40sp" 
        android:textColor="#ffffff"
        android:paddingBottom="20dp"/>
    
    
    
    
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:baselineAligned="false">
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp">
		    <ImageView
		        android:src="@drawable/washer2"
		        android:layout_height="140dp"
		        android:layout_width="106dp"
		        android:contentDescription="@string/washers"
		        />
		    
		</LinearLayout>
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content">
	        
	        <TextView 
	            android:layout_width="fill_parent"
	            android:text="@string/washers"
	            android:layout_height="wrap_content"
	            android:textColor="#ffffff"
	            android:gravity="center_horizontal"
	            android:textSize="16sp"
	            android:textStyle="bold"/>
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="@android:color/white"></LinearLayout>
	        <TextView 
	            android:layout_width="fill_parent"
	            android:text="@string/available"
	            android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/numWashers"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textSize="28sp"
	            android:textColor="#59B35B"/>
	        <TextView 
	            android:layout_width="fill_parent"
	            android:text="@string/expected_wait"
	            android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/timeRemaining"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textSize="28sp"
	            />

	    </LinearLayout>
	    
	</LinearLayout>
	<ProgressBar
		        android:id="@+id/washerProgress"
		        android:progressDrawable="@drawable/blueprogress"
		        style="@android:style/Widget.ProgressBar.Horizontal"
		        android:layout_width="fill_parent"
		        android:paddingTop="15dp"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        />
	
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:baselineAligned="false"
	    android:layout_marginTop="20dp">
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp">
		    <ImageView
		        android:src="@drawable/dryer2"
		        android:layout_width="106dp"
		        android:layout_height="140dp"
		        android:contentDescription="@string/dryers"
		        />
		    
		</LinearLayout>
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content">
	        
	        <TextView 
	            android:layout_width="fill_parent"
	            android:text="@string/dryers"
	            android:layout_height="wrap_content"
	            android:textColor="#ffffff"
	            android:gravity="center_horizontal"
	            android:textSize="16sp"
	            android:textStyle="bold"/>
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="@android:color/white"></LinearLayout>
	        <TextView 
	            android:layout_width="fill_parent"
	            android:text="@string/available"
	            android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/numDryers"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textSize="28sp"
	            android:textColor="#59B35B"/>
	        <TextView 
	            android:layout_width="fill_parent"
	            android:text="@string/expected_wait"
	            android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/timeRemaining2"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textSize="28sp"
	            />
	        
	    </LinearLayout>
	    
	</LinearLayout>
	<ProgressBar
		        android:id="@+id/dryerProgress"
		        android:progressDrawable="@drawable/blueprogress"
		        style="@android:style/Widget.ProgressBar.Horizontal"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="15dp"
		        android:layout_gravity="center_horizontal"
		        />
</LinearLayout>
</LinearLayout>